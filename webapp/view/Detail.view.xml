<mvc:View controllerName="convenience.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:m="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:t="sap.ui.table"
	xmlns:dnd="sap.ui.core.dnd"
    xmlns="sap.uxap"
	xmlns:unified="sap.ui.unified"
>
<ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
	<headerTitle>
		<ObjectPageDynamicHeaderTitle>
			<expandedHeading>
				<m:Title text="{= ${inputModel>/CombCode} + ' ' + ${inputModel>/StoreLoca} + ' '}" wrapping="true"/>
			</expandedHeading>
			<snappedHeading>
				<m:Title text="{= ${inputModel>/CombCode} + ' ' + ${inputModel>/StoreLoca} + ' '}" wrapping="true"/>
			</snappedHeading>
			<actions>
				<ObjectPageHeaderActionButton text="지점 등록" type="Emphasized" enabled="{inputModel>/editable}" visible="{inputModel>/editable}" hideText="false"/>
				<ObjectPageHeaderActionButton text="운영 중지" type="Negative" enabled="{= !${inputModel>/editable}}" visible="{= !${inputModel>/editable}}" hideText="false" hideIcon="true"/>
			</actions>
			<navigationActions>
				<ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-up" type="Transparent" tooltip="slim-arrow-up"/>
				<ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-down" type="Transparent" tooltip="slim-arrow-down"/>
			</navigationActions>
			<content >
				<m:GenericTag text="재고 부족 : " status="Success" press="onPressOpenPopover" design="StatusIconHidden">
					<m:ObjectNumber number="0" emptyIndicatorMode="Off"  unit="종"></m:ObjectNumber>
				</m:GenericTag>
			</content>
		</ObjectPageDynamicHeaderTitle>
	</headerTitle>
	<headerContent>
		<layout:HorizontalLayout
				allowWrapping="true">
			<layout:VerticalLayout
					class="sapUiMediumMarginEnd">
				<m:ObjectAttribute title="지점장" text="{inputModel>/StoreOwner}"/>
				<m:ObjectAttribute title="상세 주소" text="{inputModel>/StoreDetailloca}"/>
				<m:ObjectAttribute title="전화번호" text="{inputModel>/StorePhone}"/>
			</layout:VerticalLayout>
			<layout:VerticalLayout>
				<m:ObjectAttribute title="현재 품목"/>
				<m:ObjectNumber number="{= ${stockModel>/}.length }" emptyIndicatorMode="Off"  unit="종"></m:ObjectNumber>
			</layout:VerticalLayout>
		</layout:HorizontalLayout>
	</headerContent>
		<sections>
			<ObjectPageSection titleUppercase="false" id="presentStock" title="재고 현황" visible="{= ${stockModel>/}.length > 0 }" >
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<t:Table
								id="table"
								rows="{
										path: 'stockModel>/'
								}"
								selectionMode="MultiToggle"
								ariaLabelledBy="title">
								<t:extension>
									<m:OverflowToolbar style="Clear">
										<m:Title id="products" text="현재 재고"/>
										<m:ToolbarSpacer/>
										<m:Button text="전부 보충" type="Success"></m:Button>
										<m:ToggleButton text="Toggle Highlights" pressed="true" press="onHighlightToggle" visible="false"/>
									</m:OverflowToolbar>
								</t:extension>
								<t:rowSettingsTemplate>
									<t:RowSettings highlight="{stockModel>StockStatus}" highlightText="{stockModel>StockStatus}"/>
								</t:rowSettingsTemplate>
								<t:columns>
									<t:Column
										width="7rem"
										id="ProductCode1"
										sortProperty="ProductCode">
										<m:Text text="상품 코드"/>
										<t:template>
											<m:Text text="{stockModel>ProductCode}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column>
										<m:Text text="상품명"/>
										<t:template>
											<m:Text text="{stockModel>ProductName}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column
										width="7rem"
										hAlign="Center">
										<m:Text text="재고 수량" />
										<t:template>
											<m:ObjectNumber number="{stockModel>ProductStock}" emptyIndicatorMode="Off" state="{stockModel>StockStatus}" unit="EA" textAlign="Center"></m:ObjectNumber>
										</t:template>
									</t:Column>
									<t:Column width="4rem" hAlign="Center">
									<m:Text text="판매" />
										<t:template>
											<ObjectPageHeaderActionButton icon="sap-icon://negative">
											</ObjectPageHeaderActionButton>
										</t:template>
									</t:Column>
									<t:Column width="4rem" hAlign="Center">
									<m:Text text="보충" />
										<t:template>
											<ObjectPageHeaderActionButton icon="sap-icon://add-product">
											</ObjectPageHeaderActionButton>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection titleUppercase="false" title="상품 추가하기">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<m:HBox renderType="Bare">
								<t:Table 
									id="table1"
									selectionMode="MultiToggle"
									ariaLabelledBy="title"
									rows="{
										path: 'productModel>/'
									}">
									<t:extension>
										<m:OverflowToolbar id="infobar" style="Clear">
											<m:Title id="title" text="가능 품목"/>
										</m:OverflowToolbar>
									</t:extension>
									<t:columns>
										<t:Column
											width="7rem"
											id="ProductCode2"
											sortProperty="ProductCode">
											<m:Text text="상품 코드"/>
											<t:template>
												<m:Text text="{productModel>ProductCode}" wrapping="false" />
											</t:template>
										</t:Column>
										<t:Column>
											<m:Text text="상품명"/>
											<t:template>
												<m:Text text="{productModel>ProductName}" wrapping="false" />
											</t:template>
										</t:Column>
										<t:Column
											width="7rem">
											<m:Text text="상품 가격" />
											<t:template>
												<unified:Currency stringValue="{productModel>ProductPrice}" currency="{productModel>Unit}"/>
											</t:template>
										</t:Column>
										<t:Column
											hAlign="End"
											width="7rem">
											<m:Text text="상품 무게" />
											<t:template>
												<unified:Currency stringValue="{productModel>ProductWeight}" currency="{productModel>Wunit}"/>
											</t:template>
										</t:Column>
									</t:columns>
								</t:Table>
								<m:VBox justifyContent="Center" class="sapUiTinyMarginBeginEnd">
									<m:Button
										class="sapUiTinyMarginBottom"
										icon="sap-icon://navigation-right-arrow"
										tooltip="선택목록으로 넣기"
										press=".moveToTable2"/>
									<m:Button
										icon="sap-icon://navigation-left-arrow"
										tooltip="가능목록으로 넣기"
										press=".moveToTable1"/>
								</m:VBox>
								<t:Table
									id="table2"
									selectionMode="MultiToggle"
									ariaLabelledBy="title2"
									rows="{
										path: 'cartModel>/'
									}"
									noData="Please drag-and-drop products here.">
									<t:extension>
										<m:OverflowToolbar style="Clear">
											<m:Title id="title2" text="선택한 품목"/>
											<m:ToolbarSpacer/>
											<m:Button
												icon="sap-icon://cart-4"
												tooltip="선택항목 추가"
												press=".addStock"/>
											<m:Button
												icon="sap-icon://reset"
												tooltip="상품 초기화"
												press=".cartReset"/>
										</m:OverflowToolbar>
									</t:extension>
									<t:columns>
										<t:Column
											width="7rem"
											id="ProductCode3"
											sortProperty="ProductCode">
											<m:Text text="상품 코드" />
											<t:template>
												<m:Text text="{cartModel>ProductCode}" wrapping="false" />
											</t:template>
										</t:Column>
										<t:Column>
											<m:Text text="상품명" />
											<t:template>
												<m:Text text="{cartModel>ProductName}" wrapping="false" />
											</t:template>
										</t:Column>
										<t:Column
											width="7rem">
											<m:Text text="상품 가격" />
											<t:template>
												<unified:Currency stringValue="{cartModel>ProductPrice}" currency="{cartModel>Unit}"/>
											</t:template>
										</t:Column>
										<t:Column
											hAlign="End"
											width="7rem">
											<m:Text text="상품 무게" />
											<t:template>
												<unified:Currency stringValue="{cartModel>ProductWeight}" currency="{cartModel>Wunit}"/>
											</t:template>
										</t:Column>
									</t:columns>
								</t:Table>
							</m:HBox>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>
